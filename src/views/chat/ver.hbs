<div class="container-fluid p-8">
    <div class="row">
        <div class="col-md-12 mx.auto">
            <div class="card mb-3">
                <div class="card-body">
                    <p><b>{{name}} </b></p>
                    <form action="../add/" method="post">

                        <div class="form-group">
                            <label for="name">texto</label>
                            <input required type="text" class="form-control" id="name" name="name" value=""
                                placeholder="Ingrese el texto del post">
                        </div>
                        <div class="form-group">
                            <label for="degree_project_name">Nombre</label>
                            <input required type="text" class="form-control" id="degree_project_name"
                                name="degree_project_name" placeholder="Nombre del proyecto">
                        </div>
                        <div class="form-group">
                            <p>
                                <button class="btn btn-primary" role="button">
                                   Generar Post&raquo;
                                </button>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {{#each message}}
        <div class="col-md-4 mx.auto">
            <div class="card  mb-3">
                <div class="card-body">
                    <p><i>{{name}}: </i><b>{{text}} </b></p>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>AÃºn no hay Post</p>
                <a id="reload" href="./">Recargar</a></p>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row">

        <div class="col-md-12">

        </div>
    </div>
</div>